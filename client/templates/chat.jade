//- index.jade
extends ./layout_chat.jade

block title
	title Chat

block content
	#panel-start
		#panel-window-min
			#panel-content
				h1 Chat Square
				br
				form.insert-connect
					input(type='text', placeholder="Your username", autofocus="1", autocomplete='off', name="username")
					br
					br
					input(type='email', placeholder="Your mail" name="mail")
					br
					br
					a#connect Go !			
	#menu.removed
			h1 Chat Square
			h2 Channels 
			ul
				li #General
			h2 Users 
			ul#users 
	#content.removed
		ul#messages
		form#insert-text 
			input#m(type='text', autocomplete='off')